<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/radio_bai"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="100dp">

            <ImageView

                android:id="@+id/item_pandalive_pullto_img_eye"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp" />


        </RelativeLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_pandalive_pullto_title_eye"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="《精彩一刻》"
                android:textColor="@color/radio_black" />

            <TextView
                android:id="@+id/item_pandalive_pullto_time_eye"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2" />

            <TextView
                android:id="@+id/item_pandabroadcast_pullto_time_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="7dp"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/radio_hui" />
</LinearLayout>
