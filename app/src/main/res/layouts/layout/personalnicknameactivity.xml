<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/common_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/personal_back_img" />

            <TextView
                android:id="@+id/common_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改昵称"
                android:textColor="#fff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/common_title_right"
                android:text="保存"
                android:textColor="#fff"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_nickmane"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/pe_shape_border_gray"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:paddingLeft="62px"
            android:paddingRight="15px"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textCursorDrawable="@null" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122px"
        android:layout_marginRight="60px"
        android:layout_marginTop="32px"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:lineSpacingExtra="15px"
        android:text="@string/editnickname_tips"/>

</LinearLayout>
