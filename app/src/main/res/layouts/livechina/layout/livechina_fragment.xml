<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/livechina_tablayoutlin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">


        <android.support.design.widget.TabLayout
            android:id="@+id/livechina_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </android.support.design.widget.TabLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <ImageView
            android:id="@+id/livechina_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/live_china_add" />

    </LinearLayout>

    <apandatv.widget.view.MyViewPager
        android:id="@+id/livechina_myviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></apandatv.widget.view.MyViewPager>
</LinearLayout>